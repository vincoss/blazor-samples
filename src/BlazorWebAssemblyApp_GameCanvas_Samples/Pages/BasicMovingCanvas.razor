@page "/basicmovingcanvas"

<h3>Moving canvas sammple</h3>

<button class="btn btn-primary" @onclick="Decrement">Left</button>
<button class="btn btn-primary" @onclick="Increment">Right</button>
<button class="btn btn-primary" @onclick="IncrementTop">Down</button>

<div style="top: @(top)px; left: @(left)px; position: absolute;">
    <p>test</p>
    <p>@(top)</p>
    <p>@(left)</p>
</div>

@code {
    private int top = 0;
    private int left = 0;

    private void Increment()
    {
        left += 10;
    }

    private void Decrement()
    {
        left -= 10;
    }

    private void IncrementTop()
    {
        top += 10;
    }

}
